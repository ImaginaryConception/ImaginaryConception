{% extends 'base.html.twig' %}

{% block title %}Générer un devis{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card bg-dark text-light border-light">
                <div class="card-header">
                    <h1 class="h3 mb-0 text-center">Générer un devis</h1>
                </div>
                <div class="card-body">

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    {# Client Information #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Informations du client</h2>
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.clientName, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.clientEmail, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.clientPhone, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                        </div>
                    </div>

                    {# Project Information #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Informations du projet</h2>
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.websiteType, {'attr': {'class': 'form-select bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.estimatedPages, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.graphicCharter, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.graphicCharter, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Functionalities #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Fonctionnalités</h2>
                        <div class="row g-3">
                            <div class="col-12">
                                {{ form_row(form.specificFunctions, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                        </div>
                    </div>

                    {# Deadline and Price #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Échéance et tarification</h2>
                        <div class="row g-3">
                            <div class="col-md-6">
                                {{ form_row(form.deadline, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.totalPrice, {'attr': {'class': 'form-control bg-dark text-light border-light'}}) }}
                            </div>
                        </div>
                    </div>

                    {# Plan Selection #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Sélection du plan</h2>
                        <div class="row g-3">
                            <div class="col-12">
                                {{ form_row(form.selectedPlan, {'attr': {'class': 'form-select bg-dark text-light border-light'}}) }}
                            </div>
                            <div class="col-12 custom-inclusions">
                                {{ form_row(form.customInclusions, {'attr': {'class': 'form-control bg-dark text-light border-light', 'rows': '4'}}) }}
                            </div>
                        </div>
                    </div>

                    {# Additional Information #}
                    <div class="mb-4">
                        <h2 class="h4 mb-3">Informations complémentaires</h2>
                        <div class="row g-3">
                            <div class="col-12">
                                {{ form_row(form.additionalInfo, {'attr': {'class': 'form-control bg-dark text-light border-light', 'rows': '4'}}) }}
                            </div>
                            <div class="col-12">
                                <div class="form-check form-switch">
                                    {{ form_widget(form.isEnglish, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(form.isEnglish, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Générer le devis</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
    // Form validation
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })();

    // Custom inclusions toggle
    document.addEventListener('DOMContentLoaded', function() {
        const planSelect = document.querySelector('#quote_form_selectedPlan');
        const customInclusionsDiv = document.querySelector('.custom-inclusions');

        function toggleCustomInclusions() {
            if (planSelect.value === 'custom') {
                customInclusionsDiv.style.display = 'block';
            } else {
                customInclusionsDiv.style.display = 'none';
            }
        }

        planSelect.addEventListener('change', toggleCustomInclusions);
        toggleCustomInclusions(); // Initial state
    });
</script>
{% endblock %}