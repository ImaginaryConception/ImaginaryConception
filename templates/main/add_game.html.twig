{% extends 'base.html.twig' %}

{% block title %}Ajouter un jeu{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .game-form-container {
        max-width: 280px;
        margin: 2rem auto;
        padding: 1.5rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
    }

    .form-section {
        margin-bottom: 2rem;
        text-align: center;
    }

    .section-title {
        color: #0d6efd;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 1rem;
        border-bottom: 2px solid #0d6efd;
        display: inline-block;
        padding-bottom: 0.25rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .form-control, .form-select {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        color: #212529;
        padding: 0.5rem;
        font-size: 0.9rem;
        width: 100%;
        margin: 0 auto;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .form-label {
        color: #f8f9fa;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        display: block;
        text-align: center;
    }

    textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    .btn-primary {
        background: #0d6efd;
        border: none;
        padding: 0.5rem 2rem;
        font-size: 0.9rem;
        border-radius: 4px;
        margin-top: 1.5rem;
        width: 100%;
    }

    .btn-primary:hover {
        background: #0b5ed7;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h1 class="text-center text-light mb-4">Ajouter un jeu</h1>
            
            <div class="game-form-container">
                {{ form_start(add_game_form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                
                <div class="form-section">
                    <h3 class="section-title">Informations générales</h3>
                    <div class="form-group">
                        {{ form_label(add_game_form.title, 'Titre du jeu') }}
                        {{ form_widget(add_game_form.title, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Entrez le titre du jeu'
                            }
                        }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(add_game_form.genre, 'Genre') }}
                        {{ form_widget(add_game_form.genre, {
                            'attr': {
                                'class': 'form-select',
                                'placeholder': 'Sélectionnez le genre'
                            }
                        }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(add_game_form.description, 'Description') }}
                        {{ form_widget(add_game_form.description, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Décrivez votre jeu...'
                            }
                        }) }}
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Liens et prix</h3>
                    <div class="form-group">
                        {{ form_label(add_game_form.buylink, 'Lien d\'achat') }}
                        {{ form_widget(add_game_form.buylink, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'https://'
                            }
                        }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(add_game_form.trailer, 'Lien de la bande-annonce') }}
                        {{ form_widget(add_game_form.trailer, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'https://youtube.com/'
                            }
                        }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(add_game_form.price, 'Prix') }}
                        {{ form_widget(add_game_form.price, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '0.00'
                            }
                        }) }}
                    </div>
                </div>

                <div class="form-section">
                    <h3 class="section-title">Média</h3>
                    <div class="form-group mb-0">
                        {{ form_label(add_game_form.image, 'Logo du jeu') }}
                        {{ form_widget(add_game_form.image, {
                            'attr': {
                                'class': 'form-control',
                                'accept': 'image/*'
                            }
                        }) }}
                    </div>
                </div>

                {{ form_errors(add_game_form) }}

                <div class="text-center">
                    {{ form_widget(add_game_form.save, {
                        'attr': {
                            'class': 'btn mt-5 btn-primary'
                        },
                        'label': 'Ajouter le jeu'
                    }) }}
                </div>

                {{ form_end(add_game_form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
<script>
    // Validation du formulaire côté client
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()
</script>
{% endblock %}