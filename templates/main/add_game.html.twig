{% extends 'base.html.twig' %}

{% block title %}Adding a game{% endblock %}

{% block body %}

<h1 class="text-center text-light mb-5">Ajouter un jeu</h1>
<div id="add_game_form" class="row mt-5 mx-auto">

  {{ form_start( add_game_form ) }}

  {{ form_row( add_game_form.title ) }}

  {{ form_row( add_game_form.genre ) }}

  {{ form_row( add_game_form.description ) }}

  {{ form_row( add_game_form.buylink ) }}

  {{ form_row( add_game_form.trailer ) }}

  {{ form_row( add_game_form.price ) }}

  <p class="text-light text-center">Game logo</p>

  {{ form_row( add_game_form.image ) }}

  {{ form_errors( add_game_form ) }}

  {{ form_row( add_game_form.save ) }}

  {{ form_end( add_game_form ) }}

</div>

{% endblock %}