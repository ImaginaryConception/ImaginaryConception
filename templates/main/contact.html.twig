{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}

	<div class="container text-white">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="contact-card p-4 rounded-3 mb-4">
                    <h2 class="text-center mb-4">Contact</h2>
                    <div class="d-flex flex-column text-center gap-3">
                        <p class="mb-0"><i class="fa-solid fa-envelope me-2"></i> Email : <a href="mailto:anishamouche@gmail.com" class="text-light">anishamouche@gmail.com</a></p>
                        <p class="mb-0"><i class="fa-solid fa-phone me-2"></i> Téléphone : <a href="tel:+33749430718" class="text-light">+33 7 49 43 07 18</a></p>
                        <p class="mb-0"><i class="fab fa-github me-2"></i> GitHub : <a href="https://github.com/ImaginaryConception" target="_blank" class="text-light">ImaginaryConception</a></p>
                        <p class="mb-0"><i class="fab fa-linkedin me-2"></i> LinkedIn : <a href="https://www.linkedin.com/in/anis-h-b29099235/" target="_blank" class="text-light">Anis Hamouche</a></p>
                    </div>
                </div>

                <div class="text-center">
                    <a href="https://calendly.com/anishamouche" target="_blank" class="btn btn-light btn-lg">Planifier un rendez-vous <i class="fas fa-calendar-alt ms-2"></i></a>
                </div>

                <div id="contact_form" class="rounded-3">
                    {{ form_start(contact_form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                    <div class="mb-3">
                        {{ form_label(contact_form.firstname_lastname, 'Nom et Prénom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.firstname_lastname, {'attr': {'class': 'form-control bg-none text-light border-light'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.email, {'attr': {'class': 'form-control bg-none text-light border-light'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.object, 'Objet', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.object, {'attr': {'class': 'form-control bg-none text-light border-light'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(contact_form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(contact_form.message, {'attr': {'class': 'form-control bg-none text-light border-light', 'rows': '5'}}) }}
                    </div>

                    <div class="mb-3">
                        <div class="mb-2 text-center">Security captcha *</div>
                        <div class="d-flex justify-content-center g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
                    </div>

                    {{ form_widget(contact_form.save, {'attr': {'class': 'btn btn-light btn-lg w-100'}}) }}

                    {{ form_errors(contact_form) }}

                    {{ form_end(contact_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}<script src="https://www.google.com/recaptcha/api.js" async defer></script>{% endblock %}