            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin: 0 auto;
        max-width: 1000px;
        transition: transform 0.3s ease;
    }

    .glass-card:hover {
        transform: translateY(-5px);
    }

    .header-underline {
        width: 50px;
        height: 3px;
        background: linear-gradient(90deg, #007bff, #00ff88);
        margin: 1rem auto;
        border-radius: 3px;
    }

    .section-title {
        color: white;
        text-align: center;
        font-weight: bold;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        position: relative;
        padding-bottom: 1rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 30px;
        height: 2px;
        background: linear-gradient(90deg, #007bff, #00ff88);
        border-radius: 2px;
    }

    .legal-section {
        padding: 1.5rem;
        border-radius: 15px;
        background: rgba(255, 255, 255, 0.05);
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }

    .legal-section:hover {
        background: rgba(255, 255, 255, 0.08);
        transform: translateY(-2px);
    }

    .legal-section p {
        line-height: 1.8;
        margin-bottom: 0;
    }

    @media (max-width: 768px) {
        .glass-card {
            margin: 1rem;
            padding: 1.5rem;
        }

        .section-title {
            font-size: 1.3rem;
        }

        .legal-section {
            padding: 1rem;
        }
    }
</style>
{% endblock %}