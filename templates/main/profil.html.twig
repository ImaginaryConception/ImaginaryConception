{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
<style>
    .profile-container {
        max-width: 800px;
        margin: 60px auto;
        padding: 20px;
    }

    .profile-card {
        background: rgba(31, 31, 31, 0.8);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .profile-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .profile-header {
        padding: 30px;
        background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, #4d90fe, #3b80e1);
        border-radius: 50%;
        margin: 0 auto 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        color: white;
        text-transform: uppercase;
        box-shadow: 0 4px 20px rgba(77, 144, 254, 0.3);
    }

    .profile-info {
        padding: 30px;
        background: rgba(44, 44, 44, 0.5);
    }

    .info-item {
        margin-bottom: 25px;
        position: relative;
        overflow: hidden;
    }

    .info-label {
        font-weight: 600;
        color: #4d90fe;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 10px;
    }

    .info-value {
        font-size: 16px;
        color: #fff;
        padding: 15px;
        background: rgba(0, 0, 0, 0.2);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(5px);
    }

    .profile-actions {
        padding: 30px;
        background: rgba(44, 44, 44, 0.7);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .action-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        background: linear-gradient(135deg, #4d90fe 0%, #3b80e1 100%);
        padding: 15px 30px;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(77, 144, 254, 0.3);
    }

    .action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(77, 144, 254, 0.4);
        background: linear-gradient(135deg, #3b80e1 0%, #2a6ed4 100%);
        color: white;
    }

    .action-btn i {
        margin-right: 10px;
        font-size: 18px;
    }

    @media (max-width: 768px) {
        .profile-container {
            margin: 30px 20px;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            font-size: 32px;
        }

        .action-btn {
            padding: 12px 20px;
            font-size: 14px;
        }
    }
</style>

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-avatar">
                {{ app.user.email|slice(0, 1) }}
            </div>
        </div>
        <div class="profile-info">
            <div class="info-item">
                <div class="info-label">Adresse e-mail</div>
                <div class="info-value">{{ app.user.email }}</div>
            </div>
            <div class="info-item">
                <div class="info-label">Mot de passe</div>
                <div class="info-value">••••••••</div>
            </div>
        </div>
        <div class="profile-actions">
            <a href="{{ path('edit_profil', {'id': user.id}) }}" class="action-btn">
                <i class="fas fa-edit"></i>Modifier le profil
            </a>
        </div>
    </div>
</div>
{% endblock %}