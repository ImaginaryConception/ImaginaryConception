{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div id="register_form" class="row mt-6 mx-auto">

		{{ form_start(registrationForm) }}

		{{ form_row(registrationForm.email) }}

		{{ form_row(registrationForm.plainPassword) }}

		<div class="mb-3">
			<div class="mb-2 text-center text-light">Security captcha *</div>
			<div class="d-flex justify-content-center g-recaptcha" data-sitekey="{{ google_recaptcha_site_key }}"></div>
		</div>

		<p class="text-light text-center">By registering, you confirm that you have read and accepted the
			<a href="{{ path('mentions_legales') }}">Legal Notices</a>.</p>

		<p class="text-light text-center">Already registered? Login
			<a href="{{ path('login') }}">here</a>.</p>

		<input type="hidden" id="recaptchaResponse" name="recaptcha-response">

		{{ form_errors(registrationForm) }}

		{{ form_end(registrationForm) }}

	</div>

{% endblock %}

{% block js %}
	<script src="https://www.google.com/recaptcha/api.js" async defer></script>
{% endblock %}
